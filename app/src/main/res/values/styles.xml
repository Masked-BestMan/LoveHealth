<resources>
    <style name="AppTheme_launcher" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@mipmap/ic_launcher</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme_day" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorText">@android:color/black</item>
        <item name="colorTextBackground">@color/text_full_white</item>
        <!--toolbar背景色，BottomNavigationView图片文本背景色，基本Widget背景色，最小化app标题栏背景色-->
        <item name="colorPrimary">@color/theme_color_deep_day</item>
        <!--状态颜色-->
        <item name="colorPrimaryDark">@color/theme_color_deep_day</item>
        <!--FloatingActionButton背景色-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--某些widget背景色-->
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@color/theme_color_simple_day_background</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme_night" parent="Theme.AppCompat.NoActionBar">
        <item name="colorText">@color/text_full_white</item>
        <item name="colorTextBackground">@color/text_color_deep_gray</item>
        <!--toolbar背景色，BottomNavigationView图片文本背景色，基本Widget背景色，最小化app标题栏背景色-->
        <item name="colorPrimary">@color/theme_color_deep_night</item>
        <!--状态颜色-->
        <item name="colorPrimaryDark">@color/theme_color_deep_night</item>
        <item name="android:windowBackground">@color/theme_color_simple_night</item>
        <!--FloatingActionButton背景色-->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@null</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="OverflowButtonStyle" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/action_overflow_button</item>
    </style>
    <style name="OverflowMenuStyle_Day">
        <!--toolbar菜单按钮的颜色-->
        <item name="android:actionOverflowButtonStyle">@style/OverflowButtonStyle</item>
        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownWidth">wrap_content</item>

        <!--返回按钮的左边留白和溢出按钮的右边留白-->
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">2dp</item>
        <!-- 弹出层背景颜色 -->
        <item name="android:colorBackground">#ddffffff</item>
        <!-- 设置弹出菜单文字颜色 -->
        <item name="android:textColor">#474747</item>
        <!--&lt;!&ndash; 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar &ndash;&gt;-->
        <!--<item name="android:dropDownVerticalOffset">2dip</item>-->
        <!--&lt;!&ndash; 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 &ndash;&gt;-->
        <!--<item name="android:dropDownHorizontalOffset">2dip</item>-->
    </style>
    <style name="OverflowButtonStyle_Night" parent="OverflowMenuStyle_Day">
        <item name="android:colorBackground">#dd474747</item>
        <!-- 设置弹出菜单文字颜色 -->
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="MyTextStyle">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="dialog_style" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFullscreen">true</item>
        <!--设置无标题-->
        <item name="windowNoTitle">true</item>
        <!--设置动画，在这里使用让它继承系统的Animation.Dialog-->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

</resources>
